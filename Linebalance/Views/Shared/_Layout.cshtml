        <li><i class="fa fa-user"></i>   <a style="color: aliceblue; font-size: 18px;" href="#">@ViewData["User"]</a></li>
    </ul>
    <div class="line1">
        <div class="line2">
            <div class="line3">
            </div>
        </div>
    </div>

    <div class="body">
